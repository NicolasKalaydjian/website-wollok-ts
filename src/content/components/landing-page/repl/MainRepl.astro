---
import "./MainRepl.css"
import Repl from "./repl.html"
import { ReplEvaluator } from "./ReplEvaluator"
import { Image } from 'astro:assets';
import wollokDiagramDark from '/src/assets/wollok-lsp-diagram-dark.png';
import wollokDiagramLight from '/src/assets/wollok-lsp-diagram-light.png';
---
<section class="main-repl">
    <div class="repl">
        <Repl client:load/>
        <ReplEvaluator client:only />
    </div>
    <div class="dynamic-diagram">
        {[ 
            {src: wollokDiagramLight, hideCSS: 'hide-dark'},
            {src: wollokDiagramDark, hideCSS: 'hide-light'}
          ].map(({src, hideCSS}) => 
            <Image src={src} class={hideCSS} id="diagramaImagen" alt="El diagrama dinÃ¡mico permite visualizar el estado de tus objetos en tiempo real." />
          )}
    </div>
</section>